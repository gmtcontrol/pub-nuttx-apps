#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config ARDUSIMPLE_NETCONF
	bool "Network configuration"
	default n
	depends on NETINIT_THREAD

if ARDUSIMPLE_NETCONF

config ARDUSIMPLE_NETCONF_PROGNAME
	string "Program name"
	default "netconf"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config ARDUSIMPLE_NETCONF_PRIORITY
	int "Task priority"
	default 100

config ARDUSIMPLE_NETCONF_STACKSIZE
	int "Stack size"
	default DEFAULT_TASK_STACKSIZE

endif
