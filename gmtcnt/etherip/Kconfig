#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config GMTCNT_ETHERIP
	bool "EtherNet/IP™ application"
	default n
	depends on ODVA_ETHERIP
	---help---
		Enable sample application for EtherNet/IP™ protocol.

if GMTCNT_ETHERIP

config GMTCNT_ETHERIP_PROGNAME
	string "Program name"
	default "etherip"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config GMTCNT_ETHERIP_PRIORITY
	int "Task priority"
	default 100

config GMTCNT_ETHERIP_STACKSIZE
	int "Task stack size"
	default DEFAULT_TASK_STACKSIZE

endif # GMTCNT_ETHERIP
