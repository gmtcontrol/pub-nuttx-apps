#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config GMTCNT_PLCLOGIC
	bool "PLC core logic"
	default n
	select BCH
	select LIBFLASH
	---help---
		Enable support for the PLC core logic.

if GMTCNT_PLCLOGIC

config GMTCNT_PLCLOGIC_PRIMARY_SLOT_PATH
	string "Firmware image slot path"
	default "/dev/ota0"
	---help---
		The path to the kernel firmware image slot character
		device driver. The image runs from this location.
		Default: /dev/ota0

config GMTCNT_PLCLOGIC_SECONDARY_SLOT_PATH
	string "Application image slot path(1)"
	default "/dev/ota1"
	---help---
		The path to the application image(1) slot character
		device driver. The image runs from this location.
		Default: /dev/ota1

config GMTCNT_PLCLOGIC_TERTIARY_SLOT_PATH
	string "Application image slot path(2)"
	default "/dev/ota2"
	---help---
		The path to the application image(2) slot character
		device driver. The image runs from this location.
		Default: /dev/ota2

config GMTCNT_PLCLOGIC_HEADER_SIZE
	hex "Image header size"
	default 0x200
	---help---
		Note that this size should be aligned with the program memory write
		page size!

config GMTCNT_PLCLOGIC_PROGNAME
	string "Program name"
	default "logic_load"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config GMTCNT_PLCLOGIC_PRIORITY
	int "Task priority"
	default 100

config GMTCNT_PLCLOGIC_STACKSIZE
	int "Stack size"
	default DEFAULT_TASK_STACKSIZE

endif # GMTCNT_PLCLOGIC
